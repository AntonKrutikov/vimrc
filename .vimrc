execute pathogen#infect()
syntax on
filetype plugin indent on

set guioptions-=T
set guioptions-=m
set guioptions-=L
set guioptions-=r

set tabstop=4
set shiftwidth=4
set smarttab

set guifont=Droid\ Sans\ Mono:h10:cDEFAULT
colorscheme solarized

silent! map <F2> :NERDTreeToggle<CR>

set number
set ruler
